{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "request": "launch",
            "type": "cppvsdbg",            
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
	            "type": "cppdbg",
				"program": "${workspaceRoot}/bin/a.out"

            },
            "osx": {
                "MIMode": "lldb",
	            "type": "cppdbg",
				"program": "${workspaceRoot}/bin/a.out"

            },
            "windows": {
                "MIMode": "gdb",
				"program": "${workspaceRoot}/bin/a.exe"
            }
        },
        {
            "name": "C++ Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/bin/a.out",
            "processId": "${command.pickProcess}",
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }
    ]
}